<%-include("partials/header.ejs");%>
<div class="row">
  <% posts.forEach((post,i)=>{%>
  <div class="col-md-6 col-lg-4 mb-4">
    <div class="card h-100 shadow-sm">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text flex-grow-1"><%= post.content %></p>
        <div class="mt-auto">
          <a href="/update/<%=i%>" class="btn btn-warning me-2"><i class="fas fa-edit"></i> Update</a>
          <form method="post" action="/delete/<%= i %>" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this post?')">
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%})%>
</div>
<%-include("partials/footer.ejs");%>
