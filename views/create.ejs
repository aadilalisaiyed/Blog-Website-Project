<%-include("partials/header.ejs");%>
<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h1 class="h4 mb-0"><i class="fas fa-plus me-2"></i>Add New Blog Post</h1>
      </div>
      <div class="card-body">
        <form action="/create" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter post title" required>
          </div>
          <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="content" name="content" rows="5" placeholder="Write your post content here..." required></textarea>
          </div>
          <button type="submit" class="btn btn-success"><i class="fas fa-paper-plane me-2"></i>Publish Post</button>
        </form>
      </div>
    </div>
  </div>
</div>
<%-include("partials/footer.ejs");%>